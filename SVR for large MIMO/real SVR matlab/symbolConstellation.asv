function [ symConstell ] = symbolConstellation( M, pav )
%UNTITLED3 Summary of this function goes here
%   Detailed explanation goes here
Q=sqrt(M);
symConstell=zeros(M,1);
symContellReal=zeros(Q,1);
symReal=zeros(Q,1);
symImag=zeros(Q,1);
if(M==2)
  d=sqrt(pav);  
else
    d=sqrt(3*pav/(2*(M-1)));
end

for count=1:Q
    symContellReal(count)=-(Q-1)*d+(count-1)*2*d;
end
for count=1:M
    symReal(count)=symConstellReal(fix((count-1)/Q)+1);
    symImag(count)=symConstellReal(mod(count-1,Q))
end

